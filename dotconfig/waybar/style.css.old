* {
    border: none;
    border-radius: 0;
    /* `otf-font-awesome` is required to be installed for icons */
    font-family:"MesloLGS NF";
    font-size: 12px;
    font-weight: 600;
    min-height: 0;
}

window#waybar {
    background-color: #282c34;
    /*border-bottom: 1px solid @unfocused_borders;*/
}

window#waybar.hidden {
    opacity: 0.2;
}

